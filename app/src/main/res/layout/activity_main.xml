<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#33691E">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/ic_martini_white_24dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Boisons"
                android:id="@+id/textView"
                android:textColor="#ffffff"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Café"
                android:id="@+id/buttonCafe"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Thé"
                android:id="@+id/buttonThe"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Coca cola"
                android:id="@+id/buttonCoca"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Soda"
                android:id="@+id/buttonSoda"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="RedBull"
                android:id="@+id/buttonRedbull"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Eau"
                android:id="@+id/buttonEau"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Bière"
                android:id="@+id/buttonBiere"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Autre boisson"
                android:id="@+id/buttonAutre"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                android:onClick="performClick"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_pizza_white_24dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Nourriture"
                android:textColor="#ffffff"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Pizza"
                android:id="@+id/buttonPizza"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Petit four"
                android:id="@+id/buttonPetitFour"
                android:layout_weight="0.5"
                android:minHeight="60dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Crêpes"
                android:id="@+id/buttonCrepes"
                android:layout_weight="0.5"
                android:minHeight="60dp"
                />

            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Inconnu"
                android:id="@+id/buttonInconnu"
                android:layout_weight="0.5"
                android:minHeight="60dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>